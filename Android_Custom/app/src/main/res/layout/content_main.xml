<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.huihi.page.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <Button
        android:id="@+id/btn_chart"
       android:onClick="onClick"

        android:text="弧形"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button

        android:id="@+id/btn_scroll"
        android:onClick="onClick"
        android:text="自定义布局"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button

        android:id="@+id/btn_list_view"
        android:onClick="onClick"
        android:text="ListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <Button

        android:id="@+id/btn_list_hide"
        android:onClick="onClick"
        android:text="ListView 隐藏标题栏"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button

        android:id="@+id/btn_scroll_view"
        android:onClick="onClick"
        android:text="滑动View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




    <Button
        android:id="@+id/btn_anim"
        android:onClick="onClick"
        android:text="属性动画"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btn_customAnim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="自定义属性动画" />


</LinearLayout>
